  "image": "wcs-logo.png",
  "searchTags": [
    "atc",
    "adsb",
    "mqtt",
    "websockets"
  ],
  "dist": {
    "basePath": "dist",
    "files": [
      "noi-mobility-atc.min.js"
    ],
    "scripts": [
      {
        "file": "noi-mobility-atc.min.js",
        "parameter": ""
      }
    ]
  },
  "configuration": {
    "tagName": "noi-mobility-atc",
    "options": [
      {
        "key": "lang",
        "type": "select",
        "label": "Two letter key for the language to be used. Fallback is `en`",
        "required": false,
        "options": {
          "values": [
            "en",
            "de",
            "it"
          ],
          "default": "en"
        }
      },
      {
        "key": "realtime",
        "type": "select",
        "label": "Show realtime data",
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "departures",
        "type": "select",
        "label": "Show Skyalps departures",
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "arrivals",
        "type": "select",
        "label": "Show Skypalps arrivals",
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "map",
        "type": "select",
        "label": "Show map",
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "theme",
        "type": "select",
        "label": "Color presets",
        "options": {
          "values": [
            "terminal",
            "skyalps"
          ],
          "default": "terminal"
        }
      },
      {
        "key": "header",
        "type": "select",
        "label": "Show clock & airport",
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "sidebar",
        "type": "select",
        "label": "Show sidebar",
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "regionswitch",
        "type": "select",
        "label": "Show region switcher",
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "metricunits",
        "type": "select",
        "label": "Metric units",
        "options": {
          "values": [
            "false",
            "true"
          ],
          "default": "false"
        }
      },
      {
        "key": "maxage",
        "type": "text",
        "label": "Max age of realtime data points until they are flagged as deletable (s)",
        "required": false,
        "options": {
          "default": "60"
        }
      }
    ]
  }
}